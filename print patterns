int n, i = 1;
        Scanner sc = new Scanner(System.in);
        n = sc.nextInt();
        while(i<=n)
        {int j=1;
            while( j <= n-i)
            {
                System.out.print(" ");
                j++;
            }
            int k = 0;
            while(k != 2 * i-1)
            {
                System.out.print("*");
                k++;
            }


            System.out.println();
            i++;
        }

