import java.util.Scanner;

public class Code {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        int l=n;
        while( n > 0 )
        {
            int j = 2 ;
            while ( j <= l-n+1)
            {
                System.out.print(" ");
                j++;
            }
            int k = 1 ;
            while( k <= (n * 2) - 1 )
            {
                System.out.print("*");
                k++;
            }
            System.out.println();
            n--;

        }
    }
}
